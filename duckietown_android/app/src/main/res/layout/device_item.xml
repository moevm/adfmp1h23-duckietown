<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/deviceStatusIcon"
            android:layout_width="@dimen/device_item_status_icon_width"
            android:layout_height="wrap_content"
            android:src="@drawable/device_item_status_online"
            android:contentDescription="@string/device_item_status_icon"
            android:layout_margin="@dimen/device_item_status_icon_margin"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/deviceName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/device_item_name_size"
                android:text="@string/device_list_item_placeholder"/>

            <TextView
                android:id="@+id/deviceShortStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/device_item_short_status"
                android:text="@string/device_list_item_placeholder"
                />

        </LinearLayout>

    </LinearLayout>


</FrameLayout>
